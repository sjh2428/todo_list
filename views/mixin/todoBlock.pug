                            <pre class="card-text todo-contents">#{todo.contents}</pre>
                            <div class="todo-priority" style="display: none;">#{todo.priority}</div>
                            <div class="todo-is-dead-line" style="display: none;">#{todo.is_dead_line}</div>
                            <div class="todo-completeds" style="display: none;">#{todo.completed}</div>
                            <button class="btn btn-primary btn-sm btn-todo-modify" data=#{todo.todo_id} data-toggle="modal" data-target="#TodoActionModal">Modify</button>
                        </div>
                    </div>
            else if todo.priority == 2
                .card-container
                    <div class="card border-primary todo-title-part">
